{
    "name": "yoop/skeleton",
    "type": "project",
    "license": "MIT",
    "description": "Squelette pour cr√©ation d'une web application avec Yoop",
    "minimum-stability": "dev",
    "autoload" : {
        "psr-4" : {
            "App\\" : "src/"     
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
         }
    },
    "repositories":[
        {
            "type": "package",
            "package": {
                "name": "cyrhades/yoop",
                "version" : "master",
                "source": {
                    "url": "https://github.com/Cyrhades/yoop.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-4": { "Yoop\\": ["src/"] }
                }
            }
      
        }
    ],
    "require": {
        "cyrhades/yoop": "master",
        "twig/twig": "^3.0",
        "textalk/websocket": "^1.6",
        "nikic/fast-route": "^1.3" 
    },
    "require-dev": {
        "symfony/var-dumper": "^5.1"
    }
}
